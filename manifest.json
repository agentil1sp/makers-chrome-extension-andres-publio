{
    "manifest_version": 3,
    "name": "ChatGPT",
    "description": "Base Level Extension",
    "version": "1.0",

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon2.png"
      },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],

    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],

    "host_permissions": [
        "https://api.openai.com/"
    ]

}