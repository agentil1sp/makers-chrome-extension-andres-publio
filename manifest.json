{
    "manifest_version": 3,
    "name": "ChatGPT at any time",
    "description": "A Chrome extension allowing users to prompt in ChatGPT without leaving the tab",
    "version": "1.0",
    "icons": {
        "128": "images/icon2.png"
      },

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon2.png"
      },

    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],

    "host_permissions": [
        "https://api.openai.com/"
    ]

}